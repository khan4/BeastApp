<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


    <ImageButton
        android:id="@+id/btnImgBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:background="#000"
        app:layout_constraintLeft_toLeftOf="@id/g1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/tvPageNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/btnImgBack"
        app:layout_constraintRight_toLeftOf="@+id/btnNext"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@id/g2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/next"
        android:background="#000"
        />

    <ImageView
        android:id="@+id/imgViews"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnImgBack"
        app:layout_constraintRight_toLeftOf="@+id/g1"
        android:src="@drawable/youtube"
        />
    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/g1"
        app:layout_constraintTop_toBottomOf="@id/btnImgBack"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="15dp"
        android:text="Enjoy the content and Share this App to your family and friends"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="16sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>